                @Html.ValidationMessageFor(x => x.EmployeesDto.UserLogin, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="row margin-bottom-10">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.EmployeesDto.Description)
                @Html.TextBoxFor(x => x.EmployeesDto.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EmployeesDto.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="row">
            <div class="col-sm-12 margin-top-20">
                <button type="submit" class="btn btn-success">ارسال</button>
                @Html.ButtonLoading()
            </div>
        </div>
    </fieldset>
</div>