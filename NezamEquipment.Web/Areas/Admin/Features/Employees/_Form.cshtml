                @Html.ValidationMessageFor(x => x.EmployeesDto.LoginStatus, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(x => x.EmployeesDto.IP)
                @Html.TextBoxFor(x => x.EmployeesDto.IP, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EmployeesDto.IP, "", new { @class = "text-danger" })
            </div>


        </div>
        <div class="row margin-bottom-10">
            <div class="col-sm-4">
                @Html.LabelFor(x => x.EmployeesDto.MobileNumber)
                @Html.TextBoxFor(x => x.EmployeesDto.MobileNumber, new { @class = "form-control" })
